;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_
;; Bar Settings

[bar/main]
monitor = ${env:MONITOR:}
width = 100%

height = 25
font-0 = "SF Compact Text:pixelsize=11;3"
font-1 = "Font Awesome 5 Free Solid:style=Solid;3"
font-2 = "Font Awesome 5 Free Regular:style=Regular;3"

fixed-center = true
bottom = true

background = ${colors.systemBackground}
foreground = ${colors.systemWhite}

modules-left = i3 nowplaying
modules-center = date
modules-right = vpn download cpu memory updates volume time notification

# override-redirect = true
wm-restack = i3
enable-ipc = true

cursor-click = pointer
cursor-scroll = ns-resize

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_
;; Modules (Right [Right to Left])

tray-position = right
#tray-position = ${env:TRAY_POS:}
tray-background = ${theme.shade-1}
tray-padding = 2

[module/notification]
type = custom/text

content = ""
content-padding = 2
content-background = ${theme.shade-1}
click-left = kill -s USR1 $(pidof deadd-notification-center)

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/time]
type = internal/date
interval = 1.0

format = <label>
format-prefix = 
format-prefix-padding-left = 2
format-background = ${theme.shade-2}

time = "%H:%M"
label = %time%
label-padding = 2

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/volume]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
format-volume-background = ${theme.shade-3}

format-muted = <label-muted>
format-muted-background = ${theme.shade-3}

label-volume = %percentage%%
label-volume-background = ${theme.shade-3}
label-volume-padding-right = 2

label-muted = " 0%"
label-muted-padding-right = 2
label-muted-padding-left = 2
label-muted-foreground = ${colors.systemRed}
label-muted-background = ${theme.shade-3}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-padding-left = 2

click-right = pavucontrol

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/updates]
type = custom/script
exec = ~/.config/polybar/scripts/updates.sh
interval = 120

label-background = ${theme.shade-4}
label-padding = 2

click-left = alacritty -e paru -Syu
click-right = alacritty -e paru -Syu

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/memory]
