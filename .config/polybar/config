click-right = apple-music-electron
click-middle = apple-music-electron

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/i3]
type = internal/i3

; Sorts workspaces based on index
index-sort = true

; Makes workspaces only appear on the monitor they're displayed on
