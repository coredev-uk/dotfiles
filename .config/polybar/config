systemWhite = #dfdfdf
systemBlack = #000000

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_
;; Theme Shades (Dark to Light)

[theme]
shade-1 = #171a1f
shade-2 = #232861
shade-3 = #353d91
