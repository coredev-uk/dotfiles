$MOD = SUPER

# APP VARIABLES
$BROWSER        = microsoft-edge-stable
$SCREENSHOT     = grimblast --notify copy
$MUSIC          = cider
$TERM           = MESA_GL_VERSION_OVERRIDE=3.3 MESA_GLSL_VERSION_OVERRIDE=330 kitty
$ROFI 	        = rofi -show drun -theme $HOME/.config/rofi/config.rasi  # > /tmp/rofi.log 2>&1 
$BAR            = waybar
$NOTIFY         = dunst
$LOCK           = swaylock -c 000000 -f -F
$BACKGROUND     = swaybg -i $(find $HOME/.wallpapers/. -type f | shuf -n1) -m fill &
$RGBPROFILE     = orange-night
$FILEMANAGER    = nemo

{% if yadm.hostname == "corearch" %}
###############################################
##### NVIDIA ENV ##############################
###############################################
env = LIBVA_DRIVER_NAME,nvidia
env = XDG_SESSION_TYPE,wayland
env = GBM_BACKEND,nvidia-drm
env = __GLX_VENDOR_LIBRARY_NAME,nvidia
env = WLR_NO_HARDWARE_CURSORS,1
env = MOZ_ENABLE_WAYLAND,1

env = SSH_AUTH_SOCK,$XDG_RUNTIME_DIR/ssh-agent.socket
{% endif %}

# Import GTK Settings and Setup Environment
exec-once = $HOME/.config/hypr/import-gsettings
exec-once = dbus-update-activation-environment --all
exec-once = gnome-keyring-daemon --start --components=secrets
exec-once = /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

##### LAUNCH ##############################
exec-once = $NOTIFY
exec-once = $BROWSER --no-startup-window
exec-once = $BAR

exec-once = onedrive_tray
exec-once = wl-clipboard-history -t
exec-once = liquidctl --match hydro set fan speed 20
exec-once = openrgb --startminimized -p $RGBPROFILE
exec-once = 1password --silent
exec      = $BACKGROUND

###############################################
##### MONITOR #################################
###############################################
{% if yadm.hostname == "corearch" %}
monitor=DP-1,2560x1440@144,1920x0,1 
monitor=DP-2,1920x1080@60,0x0,1
{% else %}
monitor=,preferred,auto,1.5
{% endif %}

###############################################
##### INPUT ###################################
###############################################
input {
{% if yadm.hostname == "coreasahi" %}
  touchpad {
    natural_scroll = true
  }
  kb_layout: mac
{% endif %}

{% if yadm.hostname == "corearch" %}
  kb_layout = gb 
  follow_mouse = 1 
  sensitivity = 0 # -1.0 - 1.0, 0 means no modification.
  force_no_accel = true # disable acceleration
{% endif %}
}

###############################################
##### GENERAL #################################
###############################################
general {
  gaps_in = 5
  gaps_out = 5
  border_size = 0
  no_border_on_floating = true
  layout = dwindle
}

###############################################
##### MISC ####################################
###############################################
misc {
  disable_hyprland_logo = true
  disable_splash_rendering = true
  mouse_move_enables_dpms = true
  enable_swallow = true
  swallow_regex = ^(wezterm)$
}

###############################################
##### DECORATION ##############################
###############################################

decoration {
  # ROUNDINGG
  rounding = 8
  multisample_edges = true

  # OPACITY
  active_opacity = 1.0
  inactive_opacity = 1.0

  # BLUR
  blur {
    enabled = true
    size = 3 
    passes = 3 
    new_optimizations = true
  }

  # SHADOW
  drop_shadow = true
  shadow_ignore_window = true
  shadow_offset = 2 2
  shadow_range = 4
  shadow_render_power = 2
  col.shadow = 0x66000000

  blurls = gtk-layer-shell
  # blurls = waybar
  blurls = lockscreen
}

###############################################
##### ANIMATION ###############################
###############################################
animations {
  enabled = true
  # BEZIER CURVE
  bezier = overshot, 0.05, 0.9, 0.1, 1.05
  bezier = smoothOut, 0.36, 0, 0.66, -0.56
  bezier = smoothIn, 0.25, 1, 0.5, 1

  animation = windows, 1, 5, overshot, slide
  animation = windowsOut, 1, 4, smoothOut, slide
  animation = windowsMove, 1, 4, default
  animation = border, 1, 10, default
  animation = fade, 1, 10, smoothIn
  animation = fadeDim, 1, 10, smoothIn
  animation = workspaces, 1, 6, default
}

###############################################
##### LAYOUTS #################################
###############################################
dwindle {
  no_gaps_when_only = false
  pseudotile = true # master switch for pseudotiling. Enabling is bound to mainMod + P in the keybinds section below
  preserve_split = true # you probably want this
}

