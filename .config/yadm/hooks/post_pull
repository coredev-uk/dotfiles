#!/bin/sh

# Firefox
if (command -v firefox &> /dev/null); then 
	for path in ~/.mozilla/firefox/*-release/; do
		mkdir $path/chrome/ 2&>/dev/null
		if ! (test -f $path/chrome/userChrome.css); then
			echo '[Firefox] Linking user css to' $path
			ln ~/.config/firefox/* $path/chrome
		fi
	done
fi

# Windows
if (command -v efibootmgr &> /dev/null) && (efibootmgr | grep -q 'Windows') && ! (test -f /usr/local/bin/bootwin); then
	echo '[Bootwin] Copying script to /usr/local/bin'
	sudo cp ~/.config/yadm/scripts/bootwin /usr/local/bin
	sudo cp ~/.config/yadm/scripts/bootwin.desktop ~/.local/share/applications
fi

if (command -v wine &> /dev/null) && ! (test -f /usr/local/bin/killwine); then
	echo '[KillWine] Copying script to /usr/local/bin'
	sudo cp ~/.config/yadm/scripts/killwine /usr/local/bin
fi

# Pull SSH
cd ~/.ssh
git pull
