# Setting custom environment vars
set -x PLATFORM (uname -s)
set -x GPG_TTY (tty)
set -x STARSHIP_CONFIG "$HOME/.config/starship.toml"
set fish_greeting
set -x TERM "xterm-256color"

# Path Fixes
fish_add_path $HOME/.local/bin
fish_add_path /usr/lib/jvm/default/bin
fish_add_path $HOME/.cargo/bin
fish_add_path /usr/local/bin
fish_add_path $HOME/.config/fish/scripts

{% if yadm.os == "Darwin" %}
# Path Changes
fish_add_path /opt/homebrew/sbin
fish_add_path /opt/homebrew/bin

# PNPM
set -gx PNPM_HOME "$HOME/Library/pnpm"
set -gx PATH "$PNPM_HOME" $PATH
{% endif %}

if status is-interactive
    # Commands to run in interactive sessions can go here 
    if command -v pfetch &> /dev/null
      pfetch
    end

    # Start ssh-agent if not running
    if test -z (pgrep ssh-agent | string collect)
        eval (ssh-agent -c) > /dev/null
        set -Ux SSH_AUTH_SOCK $SSH_AUTH_SOCK
        set -Ux SSH_AGENT_PID $SSH_AGENT_PID
        set -Ux SSH_AUTH_SOCK $SSH_AUTH_SOCK
    end

    # Alias Vscode Insiders if installed
    if command -v code-insiders &> /dev/null
     alias code="code-insiders"
    end
    
    set -Ux CARGO_NET_GIT_FETCH_WITH_CLI true

    . ~/.config/fish/functions/rprompt.fish
    . ~/.config/fish/misc/secrets.fish

    alias ls='eza -F --group-directories-first'
    alias vim='nvim'
    alias vi='nvim'
    alias la='ls -la'
    alias paru='yay'
    alias yarn='corepack yarn'
end

starship init fish | source
{% if yadm.os == "Darwin" %}
source ~/.config/fish/misc/iterm2_shell_integration.fish
{% endif %}
